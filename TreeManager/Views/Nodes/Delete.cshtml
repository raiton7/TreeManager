@model TreeManager.Models.Node

@{
    ViewBag.Title = "Usuń";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<h3>Czy na pewno chcesz usunąć poniższy węzeł?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Value)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdParent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdParent)
        </dd>
    </dl>

    <div>
        @if (Model.ChildNodes.Count > 0)
        {
            @Html.Raw("<p><b>Uwaga:</b> usunięcie tego węzła spowoduje usunięcie wszystkich jego węzłów-dzieci</p>");
        }
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" /> <br />
            @Html.ActionLink("Wróć do drzewa", "Index") |
            @Html.ActionLink("Wróć do listy", "Table")
        </div>
    }
</div>
